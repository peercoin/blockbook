version: '3'
services:
 tblockbook:
     image: blockbook-peercoin_testnet
     links:
       - tpeercoind
     ports:
       - 18080:8080
     volumes:
      - "tblockbook_datadir:/data"
     restart: always

 tpeercoind:
    image: peercoin/peercoind:0.11.2
    environment:
      - RPC_USER=peercoinrpc
      - RPC_PASSWORD=Dodm2a7tUGEDcUzZfQacSFKmgfiJSwZNFs6hi6YFqBnC
    command:
      -nominting
      -testnet
    expose:
      - "9903"
      - "9904"
    volumes:
      - "tpeercoin_datadir:/data"
    restart: always

volumes:
  tpeercoin_datadir:  
  tblockbook_datadir:
